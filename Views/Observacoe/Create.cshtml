@model Sistema_Desaparecidos.Models.Observacoes

@{
    ViewData["Title"] = "Create";
}

<h1>Criar uma Observação</h1>

<h4>Observação</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ObservacoesDescricao" class="control-label"></label>
                <input asp-for="ObservacoesDescricao" class="form-control" />
                <span asp-validation-for="ObservacoesDescricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ObservacoesLocal" class="control-label"></label>
                <input asp-for="ObservacoesLocal" class="form-control" />
                <span asp-validation-for="ObservacoesLocal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ObservacoesData" class="control-label"></label>
                <input asp-for="ObservacoesData" class="form-control" />
                <span asp-validation-for="ObservacoesData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PessoaId" class="control-label"></label>
                <select asp-for="PessoaId" class ="form-control" asp-items="ViewBag.PessoaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label"></label>
                <select asp-for="UsuarioId" class ="form-control" asp-items="ViewBag.UsuarioId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
