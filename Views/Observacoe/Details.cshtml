@model Sistema_Desaparecidos.Models.Observacoes

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center my-4">Detalhes da Observação</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Observação</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Descrição:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ObservacoesDescricao)</dd>
                        <dt class="col-sm-4">Local:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ObservacoesLocal)</dd>
                        <dt class="col-sm-4">Data:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ObservacoesData)</dd>
                        <dt class="col-sm-4">Pessoa:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Pessoa.PessoaNome)</dd>
                        <dt class="col-sm-4">Usuário:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Usuario.UsuarioNome)</dd>
                    </dl>
                </div>
                <div class="card-footer text-muted">
                    <a asp-action="Edit" asp-route-id="@Model?.ObservacoesId" class="btn btn-primary">Editar</a>
                    <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
                </div>
            </div>
        </div>
    </div>
</div>

<footer class="footer mt-4 py-3 bg-light">
    <div class="container text-center">
        <span class="text-muted">Sistema de Desaparecidos © 2024</span>
    </div>
</footer>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    .container {
        flex: 1;
    }

    .card-header {
        background-color: #007bff;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

    .footer {
        background-color: #f8f9fa;
        border-top: 1px solid #e9ecef;
    }
</style>
